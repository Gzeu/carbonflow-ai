# CarbonFlow AI Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://carbonflow:password@localhost:5432/carbonflow_db
REDIS_URL=redis://localhost:6379

# API Configuration
BACKEND_PORT=4000
AI_ENGINE_PORT=8001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_RATE_LIMIT=100

# Frontend Configuration
REACT_APP_API_URL=http://localhost:4000
REACT_APP_AI_API_URL=http://localhost:8001
REACT_APP_MULTIVERSX_NETWORK=testnet
REACT_APP_WALLET_CONNECT_PROJECT_ID=your-walletconnect-project-id

# MultiversX Blockchain Configuration
MULTIVERSX_GATEWAY_URL=https://testnet-gateway.multiversx.com
MULTIVERSX_API_URL=https://testnet-api.multiversx.com
SMART_CONTRACT_ADDRESS=
CAR_TOKEN_IDENTIFIER=
PRIVATE_KEY_PEM_PATH=./blockchain/wallet.pem

# AI Engine Configuration
SATELLITE_API_KEY=your-satellite-imagery-api-key
NASA_API_KEY=your-nasa-api-key
GOOGLE_EARTH_API_KEY=your-google-earth-api-key
MODEL_PATH=./ai-engine/models
TRAINING_DATA_PATH=./ai-engine/data
TENSORFLOW_ENABLE_GPU=true

# IoT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=carbonflow
MQTT_PASSWORD=iot-secure-password
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=carbonflow
INFLUXDB_BUCKET=iot-sensors
LORAWAN_GATEWAY_KEY=your-lorawan-gateway-key

# External APIs
WEATHER_API_KEY=your-weather-api-key
CARBON_REGISTRY_API_KEY=your-carbon-registry-api-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:3000,https://carbonflow.ai

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_CORS=true

# Production Configuration (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=info
# ENABLE_SWAGGER=false
# SSL_CERT_PATH=/etc/ssl/certs/carbonflow.crt
# SSL_KEY_PATH=/etc/ssl/private/carbonflow.key
